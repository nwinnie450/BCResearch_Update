# Environment Configuration for Blockchain Research AI Agent
# Copy this file to .env and fill in your actual values

# ElizaOS Backend Configuration
ELIZAOS_API_URL=http://localhost:3000
ELIZAOS_API_KEY=your_elizaos_api_key_here

# Ankr Web3 API Configuration  
ANKR_API_KEY=your_ankr_api_key_here
ANKR_API_URL=https://rpc.ankr.com/multichain

# Application Settings
APP_ENV=development
DEBUG_MODE=true
LOG_LEVEL=INFO

# Cache Settings
CACHE_TTL=300
REDIS_URL=redis://localhost:6379

# Database (Optional - for storing user preferences)
DATABASE_URL=sqlite:///blockchain_research.db

# External APIs (Optional)
COINGECKO_API_KEY=your_coingecko_api_key_here
MESSARI_API_KEY=your_messari_api_key_here

# Security Settings
SECRET_KEY=your_secret_key_for_sessions_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0